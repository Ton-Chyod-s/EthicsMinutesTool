QWidget {
    background-color: #f0f0f0;
    border-radius: 10px;
    padding: 15px;
}

QLabel {
    font-size: 16px;
    color: #333;
}

QLineEdit {
    border: 1px solid #ccc;
    border-radius: 5px;
    padding: 5px;
    font-size: 14px;
}

QPushButton {
    background-color: #4CAF50;
    color: white;
    border-radius: 5px;
    padding: 10px;
    font-size: 16px;
}

QPushButton:hover {
    background-color: #45a049;
}
